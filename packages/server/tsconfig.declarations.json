{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "skipLibCheck": true,
      "noEmit": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationMap": false,
      "sourceMap": false,
      "rootDir": "./src",
      "outDir": "./dist/types",
      "declarationDir": "./dist/types",
      "noImplicitReturns": false
    },
    "include": [
      "src/index.ts",
      "src/index.browser.ts",
      "src/index.headless.ts",
      "src/index.headless.browser.ts",
      "src/**/*.d.ts"
    ]
  }